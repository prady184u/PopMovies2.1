<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Author : "
        android:id="@+id/authtextViewlbl"
        android:textColor="#313ac0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/authtextView"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/authtextViewlbl"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Content : "
        android:id="@+id/conttextViewlbl"
        android:textColor="#313ac0"
        android:layout_below="@+id/authtextViewlbl"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/conttextViewTV"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/conttextViewlbl"
        />


</RelativeLayout>